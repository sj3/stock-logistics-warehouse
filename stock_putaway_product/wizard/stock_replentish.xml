<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="stock_replentish_view_form" model="ir.ui.view">
      <field name="name">stock.replentish</field>
      <field name="model">stock.replentish</field>
      <field name="arch" type="xml">
        <form string="Replentish">
          <group colspan="4" col="4">
            <field name="picking_type_id"/>
          </group>
          <footer>
            <button name="do_compute" string="Preview" type="object" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="stock_replentish_view_form_preview" model="ir.ui.view">
      <field name="name">stock.replentish.preview</field>
      <field name="model">stock.replentish</field>
      <field name="priority">2</field>
      <field name="arch" type="xml">
        <form string="Replentish Preview">
          <field name="stock_replentish_lines" colspan="4" nolabel="1">
            <tree editable="bottom">
              <field name="product_id"/>
              <field name="qty_replentish"/>
              <field name="qty_current"/>
              <field name="location_id"/>
            </tree>
          </field>
          <footer>
            <button name="do_replentish" string="Replentish" type="object" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="stock_replentish_action" model="ir.actions.act_window">
      <field name="name">Replentish</field>
      <field name="res_model">stock.replentish</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="stock_replentish_view_form"/>
      <field name="target">new</field>
    </record>

    <menuitem id="stock_replentish_menu"
              name="Replentish"
              parent="stock.menu_stock_inventory_control"
              action="stock_replentish_action" sequence="10"/>

  </data>
</openerp>
